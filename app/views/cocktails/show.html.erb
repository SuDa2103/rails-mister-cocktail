<h1>Details of Cocktail</h1>


<p><%= @cocktail.name %></p>

<ul>
  <% doses = @cocktail.doses %>
  <% doses.each do |dose| %>
  <li><%= dose.ingredient.name %> (<%= dose.description %>)  <%= link_to 'Delete', dose_path(dose), method: :delete  %></li>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)%>

<%= link_to 'Back', cocktails_path %>
