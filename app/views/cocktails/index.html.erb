<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.cntraveler.com/photos/5a7c68c88ea5f04e2cf7733a/master/w_1280,h_854,c_limit/Ada-St__2018_Ada-St.--Bar-.jpg);">
  <div class="container">
     <div class="row">
    <div class="col-12 text-center">
      <h1>Cocktails</h1>
    </div>
  </div>
  </div>
</div>





<div class="container mt-3">


  <div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 425, width: 285, crop: :fill %>
        <% else %>
        <img src="https://images.unsplash.com/photo-1549746434-6331eadece3c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80" class="card-img-top" alt="...">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>

          <%= link_to 'View Cocktail', cocktail_path(cocktail), class: "btn btn-primary"%>
        </div>
      </div>
      </div>
      <% end %>
  </div>
</div>


<br>
<br>
<br>
<%= link_to 'Create', new_cocktail_path, class: "btn btn-danger btn-lg center-block" %>


<div class="container mt-3">
  <div class="container">
    <div class="row">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div class="col-sm">
          <% if cocktail.photo.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
             <%= cocktail.name %>
            </div>
           <% end %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


